# =============================================
# 腾讯云 CloudBase 配置 (中国区)
# =============================================
# CloudBase 环境 ID
NEXT_PUBLIC_WECHAT_CLOUDBASE_ID=your_cloudbase_env_id

# CloudBase 秘钥 (服务器端)
CLOUDBASE_SECRET_ID=your_secret_id
CLOUDBASE_SECRET_KEY=your_secret_key

# CloudBase 访问密钥 (客户端，可选但推荐)
VITE_CLOUDBASE_ACCESS_KEY=your_access_key

# =============================================
# Supabase 配置 (国际区)
# =============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# =============================================
# JWT 配置
# =============================================
JWT_SECRET=your_jwt_secret_key_for_production

# =============================================
# 部署区域配置
# =============================================
NEXT_PUBLIC_DEPLOYMENT_REGION=CN          # CN=中国, INTL=国际

# =============================================
# 支付配置 (按需配置)
# =============================================
# 微信支付
WECHAT_PAY_MCH_ID=your_wechat_pay_mch_id
WECHAT_PAY_MCH_CERT_SERIAL_NO=your_cert_serial_no
WECHAT_PAY_MCH_API_KEY=your_api_key
WECHAT_PAY_NOTIFY_URL=your_notify_url

# 支付宝
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_private_key
ALIPAY_PUBLIC_KEY=your_public_key

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# =============================================
# 通用配置
# =============================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000