# =============================================
# 腾讯云 CloudBase 配置 (中国区)
# =============================================
# CloudBase 环境 ID
NEXT_PUBLIC_WECHAT_CLOUDBASE_ID=your_cloudbase_env_id

# CloudBase 秘钥 (服务器端)
CLOUDBASE_SECRET_ID=your_secret_id
CLOUDBASE_SECRET_KEY=your_secret_key

# CloudBase 访问密钥 (客户端，可选但推荐)
VITE_CLOUDBASE_ACCESS_KEY=your_access_key

# =============================================
# Supabase 配置 (国际区)
# =============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# =============================================
# JWT 配置
# =============================================
JWT_SECRET=your_jwt_secret_key_for_production

# =============================================
# 部署区域配置
# =============================================
NEXT_PUBLIC_DEPLOYMENT_REGION=CN          # CN=中国, INTL=国际

# =============================================
# 微信登录配置
# =============================================
WECHAT_APP_ID_weblogin=your_wechat_login_app_id
WECHAT_APP_SECRET_weblogin=your_wechat_login_app_secret

# =============================================
# 支付配置 (按需配置)
# =============================================
# 微信支付
WECHAT_PAY_MCH_ID=your_wechat_pay_mch_id
WECHAT_PAY_MCH_CERT_SERIAL_NO=your_cert_serial_no
WECHAT_PAY_MCH_API_KEY=your_api_key
WECHAT_PAY_NOTIFY_URL=your_notify_url
WECHAT_PAY_SERIAL_NO=your_merchant_cert_serial_no
WECHAT_PAY_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
WECHAT_PAY_API_V3_KEY=your_32_chars_api_v3_key
WECHAT_PAY_PLATFORM_SERIAL_NO=your_platform_cert_serial_no
WECHAT_PAY_PLATFORM_CERT="-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----"
# 可选：多平台证书 JSON（优先级高于上面两项）
# WECHAT_PAY_PLATFORM_CERTS={"serial_a":"-----BEGIN CERTIFICATE-----\\n...\\n-----END CERTIFICATE-----","serial_b":"-----BEGIN CERTIFICATE-----\\n...\\n-----END CERTIFICATE-----"}

# 支付宝
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_private_key
ALIPAY_PUBLIC_KEY=your_public_key

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# =============================================
# 通用配置
# =============================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Download center / admin
ADMIN_PANEL_TOKEN=replace-with-random-admin-token
NEXT_PUBLIC_ADMIN_EMAILS=admin@example.com
SUPABASE_DOWNLOAD_BUCKET=downloads
ADMIN_USERNAME=admin
ADMIN_PASSWORD=replace-with-strong-password
ADMIN_JWT_SECRET=replace-with-random-jwt-secret
